package game.server.model;

/**
 * MAIN ENCLOSURE CLASS
 * For standard enclosures
 * 
 * @author Leonardo
 */
public class Enclosure extends Pawn {
	
	/**
	 * VARS
	 */	
	private int enclosureIdentifier;
	private static final String OBJ_IDENTIFIER = "Enclosure";

	/**
	 * CONSTRUCTOR
	 */
	public Enclosure(int encId) {
		super.setThisObjType(OBJ_IDENTIFIER);
		enclosureIdentifier = encId;
	}
	//Default constructor
	public Enclosure() {
		this(0);
	}
	
	/**
	 * Get the current enclosure identifier
	 * @return
	 */
	public int getEnclosureIdentifier(){
		return enclosureIdentifier;
	}
	
	/**
	 * Set a new enclosure identifier
	 * @param id
	 */
	public void setEnclosureIdentifier(int id){
		enclosureIdentifier = id;
	}
	
}
