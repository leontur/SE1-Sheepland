package game.server.interfaces;

import java.util.List;

public interface DatabaseInterface {

	/**
	 * Get the number of initial plot cards
	 * @return
	 */
	int getInitialPlotCardNum();
	
	/**
	 * Get the number of standard plot cards
	 * @return
	 */
	int getStandardPlotCardsNum();
	
	/**
	 * Get the number of plot types
	 * @return
	 */
	int getPlotTypesNum();
	
	/**
	 * Get the total number of plot cards
	 * @return
	 */
	int getTotPlotCardsNum();
	
	/**
	 * Get the number of every region per plot
	 * @return
	 */
	int getRegionPerPlotNum();
	
	/**
	 * Get the number of islands
	 * @return
	 */
	int getIslandNum();
	
	/**
	 * Get the number of regions
	 * @return
	 */
	int getRegionNum();
	
	/**
	 * Get the number of cities 
	 * @return
	 */
	int getCityRegionNum();
	
	/**
	 * Get the number of enclosures
	 * @return
	 */
	int getEnclosureNum();
	
	/**
	 * Get the number of final enclosures
	 * @return
	 */
	int getFinalEnclosureNum();
	
	/**
	 * Get the number of positions that can be 
	 * taken by the shepherds 
	 * @return
	 */
	int getPositionNum();
	
	/**
	 * Get the number of sheep
	 * @return
	 */
	int getSheepNum();
	
	/**
	 * Get the number of black sheep
	 * @return
	 */
	int getSheepBNum();
	
	/**
	 * Get the sheep's value among the final score
	 * @return
	 */
	int getSheepValue();
	
	/**
	 * Get the black sheep's value among the final score
	 * @return
	 */
	int getSheepBValue();
	
	/**
	 * Get the black sheep's value among the final score
	 * @return
	 */
	int getDinarsTotNum();
	
	/**
	 * Get the number of dinars assigned to each player
	 * if they are 3 or 4 
	 * @return
	 */
	int getDinarAssignNum();
	
	/**
	 * Get the number of dinars assigned to each player
	 * if they are 2
	 * @return
	 */
	int getDinarAssignVariantNum();
	
	/**
	 * Get the number of dices in the game
	 * @return
	 */
	int getDiceNum();
	
	/**
	 * Get the total number of shepherds in the game
	 * @return
	 */
	int getTotShepherdNum();
	
	/**
	 * Get the minimum number of total players
	 * @return
	 */
	int getTotPlayerMinNumber();
	
	/**
	 * Get the maximum number of total players
	 * @return
	 */
	int getTotPlayerMaxNumber();
	
	/**
	 * Get the total number of shepherds to be assigned
	 * to both players 
	 * @return
	 */
	int getTotShepherdVariantNumber();
	
	/**
	 * Get the maximum number of movements that can be
	 * played per turn by each player 
	 * @return
	 */
	int getMaxMovementCount();
	
	/**
	 * Get how many dinars are necessary to move
	 * a shepherd
	 * @return
	 */
	int getShepherdMovementDinarsCost();
	
	/**
	 * Get the multiplier of plot cards value
	 * @return
	 */
	int getPlotCardsValueMultiplier();
	
	/**
	 * Get the color of the shepherds
	 * @return
	 */
	List<String> getShepherdColor();
	
	/**
	 * Get types of plot
	 * @return
	 */
	List<String> getPlotTypes();
	
	/**
	 * Get the name of cities
	 * @return
	 */
	List<String> getCityTypes();
	
	/**
	 * Get the position viewer value
	 * @return
	 */
	List<Integer> getPositionViewerValue();
	
	/**
	 * Get the different positions per regions
	 * @return
	 */
	List<int[]> getPositionsPerRegion();
	
	/**
	 * Get the different positions per cities
	 * @return
	 */
	List<int[]> getPositionsPerCity();
	
	/**
	 * Get the different positions of adjacent matrix
	 * @return
	 */
	List<int[]> getPositionsAdjacentsMatrix();
	
