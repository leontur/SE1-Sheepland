	/**
	 * Initialize all shepherds in map
	 * @param num
	 */
	private void populateShepherds(int num) {
		
		//img shift var
		boolean variant;
		
		//for limit var
		int lim = 0;
		
		//check number
		if(num==2){
			//case of 2 players
			lim = 4;
			variant = true;
		}else{
			//standard case
			lim = num;
			variant = false;
		}
		
		//init
		for(int i=0; i<lim; i++){
			//create
			Shepherd sh;
			
			if(variant){
				
				int player = currPlayerNum==0 ? 
						(i<2 ? 0 : 1)
						:
						(i<2 ? 1 : 0)
						;
				
				int img = 0;
				if(currPlayerNum==0){
					
					if(i==0){
						img = 0;
					}else if(i==1){
						img = 4;
					}else if(i==2){
						img = 1;
					}else if(i==3){
						img = 5;
					}
					
				}else if(currPlayerNum==1){
					if(i==0){
						img = 1;
					}else if(i==1){
						img = 5;
					}else if(i==2){
						img = 0;
					}else if(i==3){
						img = 4;
					}
				}
				
				int id = 0;
				if(i==0){
					id = 0;
				}else if(i==1){
					id = 1;
				}else if(i==2){
					id = 0;
				}else if(i==3){
					id = 1;
				}
				
				sh = new Shepherd(id, img, player);
			}else{
				sh = new Shepherd(i, i, i);
			}
			
			//add to container
			add(sh);
			
			//add layer to pane
			layeredPane.setLayer(sh, OBJECTSZINDEX + 15);
			
			//set position 
			sh.setLocation(
					ddb.getDashboardDestination().get(0)[0]-shiftX + i*40,
					ddb.getDashboardDestination().get(0)[1]-shiftY
							);
			
			//add to the main list
			allShepherds.add(sh);
		}
	}
	
